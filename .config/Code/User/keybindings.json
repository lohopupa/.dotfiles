// Place your key bindings in this file to override the defaults
[
  {
    "key": "F8",
    "command": "runCommands",
    "when": "editorFocus",
    "args": {
      "commands": [
        "editor.action.marker.next",
        "closeMarkersNavigation"
      ]
    }
  },
  {
    "key": "ctrl+alt+right",
    "command": "editor.action.smartSelect.expand",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+alt+left",
    "command": "editor.action.smartSelect.shrink",
    "when": "editorTextFocus"
  },
  {
    "key": "shift+alt+right",
    "command": "workbench.action.increaseViewWidth",
  },
  {
    "key": "shift+alt+left",
    "command": "workbench.action.decreaseViewWidth",
  },
  {
    "key": "shift+alt+up",
    "command": "workbench.action.decreaseViewHeight",
  },
  {
    "key": "shift+alt+down",
    "command": "workbench.action.increaseViewHeight",
  },
  {
    "key": "ctrl+alt+k",
    "command": "bookmarks.toggle",
  },
  {
    "key": "ctrl+up",
    "command": "cursorMove",
    "args": {
      "to": "up",
      "by": "line",
      "value": 10
    }
  },
  {
    "key": "ctrl+down",
    "command": "cursorMove",
    "args": {
      "to": "down",
      "by": "line",
      "value": 10
    }
  },
  {
    "key": "ctrl+alt+o",
    "command": "workbench.action.terminal.sendSequence",
    "args": {
      "text": "code ${selectedText}\u000D"
    },
    "when": "editorTextFocus && editorHasSelection"
  },
  {
    "key": "ctrl+tab",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "workbench.action.previousEditor"
  },
  {
    "key": "ctrl+pageup",
    "command": "workbench.action.openNextRecentlyUsedEditor"
  },
  {
    "key": "ctrl+pagedown",
    "command": "workbench.action.openPreviousRecentlyUsedEditor"
  },
  {
    "key": "alt+right",
    "command": "workbench.action.navigateForward",
    "when": "canNavigateForward"
  },
  {
    "key": "alt+left",
    "command": "workbench.action.navigateBack",
    "when": "canNavigateBack"
  },
  {
    "key": "ctrl+alt+m",
    "command": "extension.insertNumbers",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+alt+n",
    "command": "-extension.insertNumbers",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+i",
    "command": "-codeium.openCodeiumCommand",
    "when": "codeium.commandEnabled && editorTextFocus && !inlineSuggestionsVisible"
  },
  {
    "key": "ctrl+shift+i",
    "command": "-codeium.openCodeiumCommand",
    "when": "codeium.commandEnabled && editorTextFocus && !inlineSuggestionsVisible"
  }
]