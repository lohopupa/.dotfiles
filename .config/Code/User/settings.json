{
    "workbench.iconTheme": "material-icon-theme",
    "files.autoSave": "afterDelay",
    "editor.fontSize": 17,
    "window.zoomLevel": 2,
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontLigatures": true,
    "workbench.startupEditor": "none",
    "problems.showCurrentInStatus": true,
    "editor.lineNumbers": "on",
    "editor.minimap.enabled": false,
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "explicit",
    "editor.tabCompletion": "on",
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.editor.tabSizing": "shrink",
    "workbench.layoutControl.enabled": false,
    "window.commandCenter": false,
    "csharp.experimental.debug.hotReload": true,
    "dotnet.server.useOmnisharp": true,
    "notebook.lineNumbers": "on",
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "python.createEnvironment.trigger": "off",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",

    },
    "markdown-preview-enhanced.enablePreviewZenMode": true,
    "markdown-preview-enhanced.previewTheme": "one-dark.css",
    "markdown-preview-enhanced.codeBlockTheme": "github-dark.css",
    "editor.cursorSurroundingLines": 5,
    "platformio-ide.autoOpenPlatformIOIniFile": false,
    "auto-build.defaultEnv.name": "STM32F103RE_creality",
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s3db": "${capture}.${extname}-*"
    },
    
    "terminal.integrated.fontLigatures.enabled": true,
    "groupImports.onSave": false,
    "workbench.editor.editorActionsLocation": "hidden",
    "problems.autoReveal": false,
    "workbench.editor.empty.hint": "hidden",
    "C_Cpp.vcFormat.newLine.beforeElse": false,
    "C_Cpp.vcFormat.newLine.beforeCatch": false,
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.lambda": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.namespace": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.type": "sameLine",
    "workbench.activityBar.location": "top",
    "git.blame.editorDecoration.enabled": false,
    "window.menuBarVisibility": "compact",
    "workbench.sideBar.location": "right",
    "chat.commandCenter.enabled": false,
    "vscode_custom_css.imports": [
        "file:///home/lohopupa/.dotfiles/vscode/style.css",
        "file:///home/lohopupa/.dotfiles/vscode/load.js"
    ],
    "redhat.telemetry.enabled": false,
    "git.blame.statusBarItem.enabled": true,
    "workbench.colorTheme": "GitHub Dark",
    "editor.multiCursorModifier": "ctrlCmd",
    "telemetry.telemetryLevel": "off",
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/node_modules/**": true,
        "**/dist/**": true,
        "**/build/**": true
    },
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false,
    },
    "editor.quickSuggestionsDelay": 10,
    "workbench.reduceMotion": "on",
    "gitlab.showPipelineUpdateNotifications": true,
    "extensions.ignoreRecommendations": true,

}